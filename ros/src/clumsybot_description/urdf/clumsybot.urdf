<?xml version="1.0" ?>
<robot name="clumsybot" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>
  <material name="metalic">
    <color rgba="0.9 0.9 0.95 1"/>
  </material>

  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.145 0.19 0.25"/>
      </geometry>
      <origin xyz="0 0 0.125"/>
      <material name="metalic"/>
    </visual>
  </link>


  <link name="hat_link">
    <visual>
      <geometry>
        <box size="0.15 0.2 0.04"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>
  <joint name="base_to_camera" type="fixed">
    <parent link="base_link"/>
    <child link="hat_link"/>
    <origin xyz="0 0 0.25"/>
  </joint>
</robot>
